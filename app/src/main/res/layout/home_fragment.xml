<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white_color"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:text="Be Creative !!! Please !!!"
        android:textColor="@color/primary_color"
        android:textSize="44px"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:text="Do not follow my application."
        android:textColor="@color/primary_color"
        android:textSize="44px"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:text="This is not your destination."
        android:textColor="@color/primary_color"
        android:textSize="44px"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:text="This is just a guide for your exploration."
        android:textColor="@color/primary_color"
        android:textSize="44px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center"
        android:layout_marginTop="100px">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/new_trip_btn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingVertical="40px"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:text="@string/new_trip"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:drawableTop="@drawable/ic_add"
            android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/trip_list_btn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingVertical="40px"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:text="@string/trip_list"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:drawableTop="@drawable/ic_apps"
            android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about_btn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="40px"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:text="@string/about"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:drawableTop="@drawable/ic_info"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center"
        android:layout_marginTop="150px">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_btn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingVertical="40px"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:text="@string/reset"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:drawableTop="@drawable/ic_add"
            android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backup_btn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="40px"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:text="@string/backup"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:drawableTop="@drawable/ic_apps"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>