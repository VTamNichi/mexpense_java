<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog"
    android:padding="20dp"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip Name"
        android:textColor="@color/primary_color"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/text_trip_name_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Enter trip name here ..."
        android:textColor="@color/black_color"
        android:textColorHint="@color/black_color"
        android:backgroundTint="@color/black_color"
        android:textSize="15dp"
        android:singleLine="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textColor="@color/primary_color"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/text_destination_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Enter destination here ..."
        android:textColor="@color/black_color"
        android:textColorHint="@color/black_color"
        android:backgroundTint="@color/black_color"
        android:textSize="15dp"
        android:singleLine="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/primary_color"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/text_date_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:hint="dd/MM/yyyy"
        android:textColor="@color/black_color"
        android:textColorHint="@color/black_color"
        android:backgroundTint="@color/black_color"
        android:textSize="15dp"
        android:singleLine="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <Button
        android:id="@+id/btn_search_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textAllCaps="false"
        android:textColor="@color/white_color"
        android:textSize="15dp"
        android:layout_marginLeft="10px"
        android:backgroundTint="@color/primary_color"/>

</LinearLayout>