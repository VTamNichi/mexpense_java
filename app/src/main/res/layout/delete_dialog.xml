<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE TRIP?"
        android:textColor="@color/white_color"
        android:background="@drawable/border_primary"
        android:textSize="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="20dp"
        android:textAllCaps="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete this trip?"
            android:textColor="@color/black_color"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This action cannot be undone."
            android:textColor="@color/black_color"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='Please type "'
                android:textColor="@color/black_color"
                android:textSize="15dp"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="confirm delete"
                android:textColor="@color/black_color"
                android:textSize="15dp"
                android:textStyle="italic|bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='" to delete this trip.'
                android:textColor="@color/black_color"
                android:textSize="15dp"
                android:textStyle="italic"/>
        </LinearLayout>

        <EditText
            android:id="@+id/text_confirm_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint=""
            android:textColor="@color/black_color"
            android:textColorHint="@color/primary_color"
            android:backgroundTint="@color/primary_color"
            android:textSize="15dp"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginBottom="10px">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_cancel_delete"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/black_color"
                android:backgroundTint="@color/white_color"
                android:textSize="15dp"
                android:layout_marginRight="10px"/>
            <Button
                android:id="@+id/btn_delete_confirm"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/white_color"
                android:textSize="15dp"
                android:layout_marginLeft="10px"
                android:enabled="false"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>